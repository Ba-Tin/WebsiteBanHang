@model IEnumerable<WebsiteBanHang.Context.Nguoidung>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Quản lý người dùng</h2>

<p>
    @Html.ActionLink("Thêm mới người dùng", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Họ tên
        </th>
        <th>
          Email
        </th>
        <th>
           Điện thoại
        </th>
        <th>
           Mật khẩu
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhanQuyen.TenQuyen)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Hoten)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dienthoai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Matkhau)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Diachi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhanQuyen.TenQuyen)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.MaNguoiDung }) |
            @Html.ActionLink("Chi tết", "Details", new { id=item.MaNguoiDung }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaNguoiDung })
        </td>
    </tr>
}

</table>
